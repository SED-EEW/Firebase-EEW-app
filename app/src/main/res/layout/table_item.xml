<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/TablePlaceTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:gravity="center"
                android:text="14 km al O de Liberia, Guanacaste, Costa Rica"
                android:textColor="#3F51B5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/TableMagTitle"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Magnitud:"
                android:textColor="#616161" />

            <TextView
                android:id="@+id/TableMagValue"
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="7.5"
                android:textColor="#F44336" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/TableDepthTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Profundidad" />

            <TextView
                android:id="@+id/TableDepthValue"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="35 km"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/TableOrTimeTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Tiempo Origen" />

            <TextView
                android:id="@+id/TableOrTimeValue"
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="02/03/2022 16:36:10" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/TableSentTitle"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Enviado" />

            <TextView
                android:id="@+id/TableSentValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="02/03/2022 16:36:10" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/TableRecTitle"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Recibido" />

            <TextView
                android:id="@+id/TableRecValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="02/03/2022 16:36:10" />
        </TableRow>

        <TableRow
            android:layout_width="434dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/TableAgencyTitle"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Agencia" />

            <TextView
                android:id="@+id/TableAgencyValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="OVSICORI - Costa Rica" />
        </TableRow>
    </TableLayout>